@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Acceso al Sistema - SETENA</title>

    <!-- Bootstrap y estilos -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/estilo-acceso.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #0b6b40, #1c7a4d);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .card-login {
            background: #fff;
            border-radius: 16px;
            padding: 2.5rem;
            width: 380px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
            animation: fadeIn 0.7s ease-in-out;
        }



        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .btn-verde {
            background-color: #0b6b40;
            color: #fff;
            border: none;
            width: 100%;
            padding: 0.75rem;
            border-radius: 8px;
            transition: background-color 0.3s;
        }

            .btn-verde:hover {
                background-color: #0e8650;
            }

        .extra-link {
            display: block;
            text-align: center;
            margin-top: 1.5rem;
            color: #0b6b40;
            text-decoration: none;
            font-weight: 500;
        }

            .extra-link:hover {
                text-decoration: underline;
            }

        .text-danger {
            text-align: center;
            margin-top: 10px;
        }

        .logo-setena {
            display: block;
            margin: 0 auto 1rem auto;
            width: 100px;
        }
    </style>
</head>

<body>
    <div class="card-login text-center">
        <img src="~/img/logo-setena.png" alt="SETENA" class="logo-setena" />
        <h4 class="mb-3 text-success fw-bold">Acceso al Sistema</h4>

        <form asp-action="Login" method="post" autocomplete="off">
            <div class="mb-3 text-start">
                <label for="correo" class="form-label">Correo electrónico</label>
                <input type="email" name="correo" class="form-control" placeholder="usuario@setena.go.cr" required />
            </div>

            <div class="mb-3 text-start">
                <label for="contrasena" class="form-label">Contraseña</label>
                <input type="password" name="contrasena" class="form-control" placeholder="••••••••" required />
            </div>

            <button type="submit" class="btn-verde mt-3">
                <i class="bi bi-box-arrow-in-right"></i> Ingresar
            </button>
        </form>

        <!-- Enlace adicional para probar jefatura -->
        <a class="extra-link" asp-controller="Jefatura" asp-action="Pendientes">
            Acceder como Jefatura (Solicitudes Pendientes)
        </a>

        <p class="text-danger">@ViewBag.Mensaje</p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
