@model List<(DateTime Fecha, string Nombre)>

@{
    ViewData["Title"] = "Feriados de Costa Rica 2025";

    // Convertir la lista de feriados a un JSON para usar en JavaScript
    var feriadosJs = Model.Select(f => new
    {
        title = f.Nombre,
        start = f.Fecha.ToString("yyyy-MM-dd")
    });

    var feriadosJson = System.Text.Json.JsonSerializer.Serialize(feriadosJs);
}

<h2>@ViewData["Title"]</h2>

<div id="calendar"></div>

<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');

        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            locale: 'es',  // Configura español
            events: @Html.Raw(feriadosJson),
            headerToolbar: {
                left: 'prev,next today',
                center: 'title',
                right: 'dayGridMonth,listMonth'
            }
        });

        calendar.render();
    });
</script>

<style>
    #calendar {
        max-width: 700px;
        margin: 20px auto;
    }
</style>
