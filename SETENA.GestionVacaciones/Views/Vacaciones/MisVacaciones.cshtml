@model List<SETENA.GestionVacaciones.Models.SolicitudVacaciones>

@{
    ViewData["Title"] = "Mis Vacaciones";
}

<h2>Mis Solicitudes de Vacaciones</h2>

<table class="table table-bordered table-hover shadow-sm">
    <thead class="table-success">
        <tr>
            <th>Inicio</th>
            <th>Fin</th>
            <th>Estado</th>
            <th>Observaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FechaInicio.ToString("yyyy-MM-dd")</td>
                <td>@item.FechaFin.ToString("yyyy-MM-dd")</td>
                <td>
                    <span class="badge bg-@(
                          item.Estado == "Aprobado" ? "success" :
                          item.Estado == "Rechazado" ? "danger" : "warning"
                                        )">@item.Estado</span>
            </td>
            <td>@item.Observaciones</td>
        </tr>
                }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        No tienes solicitudes de vacaciones registradas.
    </div>
}

