@{
    ViewData["Title"] = "Solicitudes de Vacaciones";
}

<div class="container-setena mt-4">
    <h3>Mis Solicitudes</h3>
    <a asp-action="Nueva" class="btn btn-verde mb-3">+ Nueva Solicitud</a>

    <table class="table table-striped">
        <thead class="table-success">
            <tr>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Estado</th>
                <th>Observaciones</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FechaInicio.ToShortDateString()</td>
                    <td>@item.FechaFin.ToShortDateString()</td>
                    <td>@item.Estado</td>
                    <td>@item.Observaciones</td>
                    <td><a asp-action="Detalle" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Ver</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
